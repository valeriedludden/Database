html
    head
        title= title
    body
        h1 User Manager
        div
            form(action='/searchResult/', method='post')
                input(type='text', name='searchFirst', placeholder='Search First Name')
                input(type='submit', value='Search')

        table(style='width: 100%:, color: blue:')
            thead
                tr
                    th First
                    th Last
                    th Email
                    th Age
                    th User Id

            tbody
                each user in userArray
                    tr
                        td #{user.first}
                        td #{user.last}
                        td #{user.email}
                        td #{user.age}
                        td #{user._id}
                        td
                            a(href='/edit/' + user._id) Edit User
                        td
                            a(href='/delete/' + user._id) Delete User
        br
        br
        div
            a(href='/addUser') Add new user
        div
            a(href='/users/up') Sort First Name A-Z
        div
            a(href='/users/down') Sort First Name Z-A


